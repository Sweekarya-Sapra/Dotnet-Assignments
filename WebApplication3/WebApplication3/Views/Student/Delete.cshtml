@model Student
@{
   Layout = null;
}

<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Delete Page</title>
   </head>
	
   <body>
       <center>
      @using (Html.BeginForm()){
         @Html.AntiForgeryToken()
         <div class = "form-horizontal">
   
              <h1>
                    
                        Do You Want To Delete The Selected Entry?
                    
                </h1>

            @Html.HiddenFor(model => model.Id)



             <div class = "form-group">
               @Html.LabelFor(
                  model => model.Id, htmlAttributes: new{
                     @class = "control-label col-md-2" })
				
               <div class="editor-field">
                   @Html.TextBoxFor(model=>model.Id, new{disabled="disabled", @readonly="readonly"})
               </div>
					
            </div>


            <br>
				
            <div class = "form-group">
               @Html.LabelFor(
                  model => model.Name, htmlAttributes: new{
                     @class = "control-label col-md-2" })
							
               <div class="editor-field">
                   @Html.TextBoxFor(model=>model.Name, new{disabled="disabled", @readonly="readonly"})
               </div>
					
            </div>

				<br>
            <div class = "form-group">
               @Html.LabelFor(
                  model => model.Age, htmlAttributes: new{
                     @class = "control-label col-md-2" })
							
               <div class="editor-field">
                   @Html.TextBoxFor(model=>model.Age, new{disabled="disabled", @readonly="readonly"})
               </div>
					
            </div>
            <br/>
             <div class = "form-group">
               @Html.LabelFor(
                  model => model.Phone, htmlAttributes: new{
                     @class = "control-label col-md-2" })
				
               <div class="editor-field">
                   @Html.TextBoxFor(model=>model.Phone, new{disabled="disabled", @readonly="readonly"})
               </div>
					
            </div>


            <br>
				
				<br>
                <br>
            <div class = "form-group">
               <div class = "col-md-offset-2 col-md-10">
                 <input type="submit" value="Delete User" class = "btn btn-default" /> 
               </div>
            </div>
				
         </div>
      }
		<br>
      <div>
         @Html.ActionLink("Back to List", "StudentList")
      </div>
		</center>
   </body>
</html>
